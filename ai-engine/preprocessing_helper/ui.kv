#:kivy 1.11.1
ProcessHtml:

<ProcessHtml>:
    html_input: dirty_html
    url: url
    html_output: clean_html
    BoxLayout:
        orientation: "vertical"
        TextInput:
            id: dirty_html
            multiline: True
            size_hint_y: 0.03
            auto_indent: True
            cursor_blink: True
            cursor_width: "2sp"
            hint_text: "Enter raw HTML"
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.03
            TextInput:
                id: url
                multiline: False
                auto_indent: False
                cursor_blink: True
                cursor_width: "2sp"
                hint_text: "Enter URL"
            TextInput:
                id: url
                multiline: False
                auto_indent: False
                cursor_blink: True
                cursor_width: "2sp"
                hint_text: "Enter a new metawords"
        BoxLayout:
            size_hint_y: 0.1
            size_hint_max_y: 75
            orientation: "horizontal"
            Button:
                text: "pretty clean"
                on_press: root.pretty_clean()
            Button:
                text: "escape html"
                on_press: root.escape()
            Button:
                text: "unescape html + pprint"
                on_press: root.pprint_unescape()
            Button:
                text: "run pipeline on ALL saved data"
                on_press: root.pipeline_on_saved_data()
            Button:
                text: "full pipeline"
                on_press: root.pipeline()     
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            bar_width: 30
            scroll_type: ['content', 'bars']
            Label:
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
                padding: 10, 10
                text: "### NO RESULT ###"
                id: clean_html