#:kivy 1.11.1
ProcessHtml:

<ProcessHtml>:
    html_input: dirty_html
    url: url
    html_output: clean_html
    BoxLayout:
        orientation: "vertical"
        ActionBar:
            pos_hint: {'top':1}
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: "CorpusBuilder"
                    with_previous: False
                ActionButton:
                    text: "Re-run all saved"
                    on_press: root.pipeline_on_saved_data()
                ActionButton:
                    text: "Run"
                    on_press: root.pipeline() 
                ActionButton:
                    text: "Run+Save"
                    on_press: root.pipeline_and_save() 
                ActionGroup:
                    text: "Tools"
                    mode: "spinner"
                    dropdown_width: "200sp"
                    ActionButton:
                        text: 'Pretty Print'
                        on_press: root.pretty_clean()
                    ActionButton:
                        text: 'Escape html'
                        on_press: root.escape()
                    ActionButton:
                        text: 'Unescape html and pprint'
                        on_press: root.pprint_unescape()
        TextInput:
            id: dirty_html
            multiline: True
            size_hint_y: 0.03
            auto_indent: True
            cursor_blink: True
            cursor_width: "2sp"
            hint_text: "Enter raw HTML"
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.03
            TextInput:
                id: url
                multiline: False
                auto_indent: False
                cursor_blink: True
                cursor_width: "2sp"
                hint_text: "Enter URL"
            TextInput:
                id: url
                multiline: False
                auto_indent: False
                cursor_blink: True
                cursor_width: "2sp"
                hint_text: "Enter a new metaword"
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            bar_width: 30
            scroll_type: ['content', 'bars']
            Label:
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
                padding: 10, 10
                text: "### NO RESULT ###"
                id: clean_html